<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF"
    tools:context=".Main3Activity">

    <ImageButton
        android:id="@+id/home"
        android:layout_width="349dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/CarPB"
        android:background="#FFF"
        android:src="@drawable/domk" />

    <ImageButton
        android:id="@+id/car"
        android:layout_width="261dp"
        android:layout_height="195dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="64dp"
        android:src="@drawable/carme"
        android:background="#FFF"/>

    <TextView
        android:id="@+id/text1"
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="25dp"
        android:layout_toStartOf="@+id/imageView"
        android:fontFamily="cursive"
        android:textColor="#00F" />


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="46dp"
        android:layout_height="42dp"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/imageView2"
        android:layout_marginTop="14dp"
        android:src="@drawable/kk" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="46dp"
        android:layout_height="42dp"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/car"
        android:layout_marginStart="52dp"
        android:src="@drawable/kk2" />

    <TextView
        android:id="@+id/text2"
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/text1"
        android:layout_marginTop="76dp"
        android:fontFamily="cursive"
        android:textColor="#00F" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="56dp"
        android:layout_height="43dp"
        android:layout_alignEnd="@+id/car"
        android:layout_below="@+id/car"
        android:src="@drawable/kk" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="45dp"
        android:layout_height="44dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/car"
        android:layout_marginStart="158dp"
        android:src="@drawable/kk2" />


    <TextView
        android:id="@+id/CarPB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="138dp"
        android:layout_marginTop="274dp"
        android:fontFamily="cursive"
        android:text="30"
        android:textColor="#00F" />

    <TextView
        android:id="@+id/CarPR"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/CarPB"
        android:layout_marginStart="133dp"
        android:fontFamily="cursive"
        android:text="60"
        android:textColor="#F00" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/CarPB"
        android:layout_marginBottom="59dp"
        android:fontFamily="cursive"
        android:text="20"
        android:textColor="#00F" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/CarPR"
        android:layout_marginBottom="49dp"
        android:fontFamily="cursive"
        android:text="80"
        android:textColor="#F00" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="44dp"
        android:layout_height="40dp"
        android:layout_alignStart="@+id/imageView4"
        android:layout_alignTop="@+id/textView4"
        android:src="@drawable/kk2" />

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="46dp"
        android:layout_height="43dp"
        android:layout_alignEnd="@+id/car"
        android:layout_alignTop="@+id/textView4"
        android:src="@drawable/kk" />

    <Button
        android:id="@+id/button2"
        style="@android:style/Animation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/car"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="-64dp"
        android:background="@android:color/transparent"
        android:text="Собрать ещё"
        android:textColor="@android:color/holo_red_dark" />

</RelativeLayout>